<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Activity"
    android:background="@color/white"
    >

    <EditText
        android:id="@+id/comment"
        android:layout_width="289dp"
        android:layout_height="144dp"
        android:layout_above="@+id/add_activity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:background="@drawable/radius2"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="comment"
        android:padding="15dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/violet"
        app:itemIconTint="@color/icons_color"
        app:itemRippleColor="@color/grey"
        app:menu="@menu/navigation"
        >


    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100px"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="none"
            android:text="select an activity" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_activity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="230dp"
        android:layout_weight="1"
        android:background="@drawable/radius2"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Price"
        android:padding="15dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="198dp"
        android:layout_height="56dp"
        android:layout_above="@+id/editTextTextPersonName3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/bg_spinner_fruit_up"
        android:dropDownVerticalOffset="40dp" />

    <Button
        android:id="@+id/add_activity"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="55dp"
        android:text="Add" />

</RelativeLayout>