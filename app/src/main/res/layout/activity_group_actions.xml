<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActions"
    android:background="@drawable/bckgroundshap">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="20dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/AgroupId"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="334443"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/copyId"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/ic_baseline_content_copy_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="My personal Group"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Group Type :"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/gtype"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Indevidual"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingTop="15dp"
                android:text="Description :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/grouD"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="mY indevidual group manager for "
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/showdashboard"
            android:layout_width="318dp"
            android:layout_height="69dp"
            android:background="@drawable/radius"
            android:text="Dashboard"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="435dp"
            android:layout_margin="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toaddbudget"
            android:layout_width="313dp"
            android:layout_height="67dp"
            android:background="@drawable/radius2"
            android:text="Add Budget"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="524dp"
            android:layout_margin="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteg"
            android:layout_width="261dp"
            android:layout_height="47dp"
            android:background="@color/reed"
            android:text="Delete"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="685dp" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>